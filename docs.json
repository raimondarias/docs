{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "almond",
  "name": "XeroHost Knowledge Base",
  "colors": {
    "primary": "#ff3429",
    "light": "#c90707",
    "dark": "#b53c3c"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "dropdowns": [
      {
        "dropdown": "Documentation",
        "icon": "book-open",
        "pages": [
          "quickstart",
          "development",
          "navigation"
        ]
      },
      {
        "dropdown": "API reference",
        "icon": "square-terminal",
        "pages": [
          "api-reference/get",
          "api-reference/post",
          "api-reference/delete"
        ]
      },
      {
        "dropdown": "Blog",
        "href": "https://external-link.com/blog"
      }
    ],
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "icon": "notebook-text",
            "pages": [
              "index"
            ]
          },
          {
            "group": "FAQ / Knowledge Base",
            "expanded": true,
            "pages": [
              "guides/inicio",
              "guides/navigation"
            ]
          }
        ]
      }
    ],
    "languages": [
      {
        "language": "en",
        "groups": [
          {
            "group": "Getting started",
            "pages": ["en/overview", "en/quickstart", "en/development"]
          }
        ]
      },
      {
        "language": "es",
        "groups": [
          {
            "group": "Getting started",
            "pages": ["es/overview", "es/quickstart", "es/development"]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Documentation",
          "href": "https://mintlify.com/docs",
          "icon": "book-open-cover"
        },
        {
          "anchor": "Blog",
          "href": "https://mintlify.com/blog",
          "icon": "newspaper"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/xerohost.png",
    "dark": "/logo/xerohost.png"
  },
  "navbar": {
    "links": [
      {
        "label": "Discord Support",
        "href": "https://discord.gg/xerohost"
      },
      {
        "label": "Control Panel",
        "href": "https://panel.xerohost.net"
      },
      {
        "label": "VPS Panel",
        "href": "https://vps.xerohost.net"
      }
    ]
  },
  "contextual": {
    "options": [
      "copy",
      "chatgpt",
      "claude",
      "perplexity"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/xerohostes",
      "youtube": "https://www.youtube.com/@XeroHosting",
      "instagram": "https://www.instagram.com/xerohost/"
    }
  }
}